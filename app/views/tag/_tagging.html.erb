<% user = user || @user # allow overriding w/ local variable %>

<% if @node %>
  <!-- This is the sidebar tagging display, also renders Subscribe button for multiple subscription -->
  <p style="display: inline-block; margin-right: 20px; color:#666;">This page is part of:</p>
  <!-- listing of posts in response to this one -->
  <%= render partial: 'tag/replication' %>
  <div id="tags" class="node-tags">
    <%= render partial: 'tag/tags', locals: { power_tag: false, badge_name: 'badge-secondary', tags: @node.normal_tags } %>
    <%= render partial: 'tag/tags', locals: { power_tag: true, badge_name: 'badge-primary', tags: @node.power_tag_objects } %>
  </div>
<% else %>
  <div id="tags" class="profile-tags">
    <%= render partial: 'tag/tags', locals: { power_tag: false, badge_name: 'badge-primary', tags: user.user_tags, user: user } %>
  </div>
<% end %>

<script>
$(function () {
  $('#tags [data-toggle="tooltip"]').tooltip()

  var pops = $("[data-toggle=popover]");
  $(".label").on("click", function(e){
    if(e.target === this){
      let that = this;
      if(this.dataset.count == 0){
        setTimeout(function(){
          $(that).popover("show");
        }, 0);
        this.dataset.count = 1;
      } else {
        setTimeout(function(){
          $(that).popover("hide");
        }, 0);
        this.dataset.count = 0;
      }
    }
  });
});
</script>

<% parent ||= nil %>

<% if current_user && (parent != :profile || (current_user.id == user.id || logged_in_as(['admin']))) %>

<a id="tags-open" class="btn btn-circle btn-circle-sm" style="float:left;"><i class="fa fa-plus" style="color:#808080;margin-left:3px;" aria-hidden="true"></i></a>

<%= render partial: 'tag/form', locals: { node: @node ||= nil, user: user ||= nil } %>

<% end %>

<script>
  $("#tags-open").click(function(){
      $("#tagform").show();
      $("#tags-open").hide();
  });
</script>

<style>
  #tagform {
    display:none;
  }
  .list-inline {
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>

<%= render partial: 'tag/location' %>
