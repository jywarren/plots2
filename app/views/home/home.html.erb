<% cache('feature_home-intro', skip_digest: true) do %>
  <%= feature("home-intro") %>
<% end %>

<div class="container">

<div class="projects">
  <% cache('home-blog', expires_in: 60.minutes, skip_digest: true) do %>
    <% unless @projects.nil? || @projects.length == 0 %>

      <% @projects.each_with_index do |project, index| %>

        <div class="row">
          <div class="col-6 project-image<% if index.odd? %> pull-right<% end %>">

            <a href="<%= project.path %>"><img src="<%= project.main_image %>" /</a>

          </div>
          <div class="col-6">

            <h3><a href="<%= project.path %>"><%= project.title %></a></h3>

            <p><%= project.body.split('/n')&.first %></p>

            <p><a href="<%= project.path %>">Read more &raquo;</a></p>

            <div class="people">
              <!-- people most associated with it? editors? pinnable? -->

              <% project.authors[0..2].each do |author| %>
                <a class="person" href="/profile/<%= author.username %>"><img class="img-circle" src="<%= author.image %>" /></a>
              <% end %>

              <% if project.authors.length > 2 %>
                <span class="person img-circle"><%= project.authors.length - 2 %> more</span>
              <% end %>

            </div>

          </div>
        </div>

      <% end %>

      <p><center><a class="btn btn-outline-secondary" href="/projects">More projects</a></center></p>

    <% end %>
  <% end %>
</div>

</div>

<style>

.projects {
  width: 100%;
  position: absolute;
  left: 0;
  background: #ffdfb8; 
  padding: 40px 20px;
}
.projects .row {
  padding: 40px 20px;
}
.projects .row .project-image img {
  background: #ccc; 
}
.projects .row h3 {
  color: #333;
  padding-bottom: 10px;
}
.projects .row h3 a {
  color: #333;
  text-decoration: none;
}
.projects .row a {
  color: #333;
  text-decoration: underline;
}
.projects .person {
  color: #ccc;
}
</style>

